@page
@model _.Pages.TrafficModel
@{
    ViewData["Title"] = "Urban Traffic Simulation";
}

<link rel="stylesheet" href="~/styles.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div id="clock"></div>
<h1>Urban Traffic Simulation</h1>

<button id="show-stats-btn">Statistics</button>
<button id="hide-stats-btn" style="display:none;">Hide Statistics</button>

<div id="traffic-container"></div>
<canvas id="trafficChart" style="display:none;"></canvas>

@section Scripts {
    <script src="~/scripts.js"></script>
}